<%= render 'navbar/user' %>
<div class="container">
	<div class="row">
		<%= render 'menus/menu_admin'%>
		<div class="col-sm-9">
			<div class="container-box">
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nome</th>
							<th>Email</th>
							<th>Provedor</th>
							<th>Admin</th>
							<th>Logins</th>
							<th>Ultimo acesso</th>
							<th>Criado em</th>
						</tr>
					</thead>

					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= user.id %></td>
							<td><%= user.name %></td>
							<td><%= user.email %></td>
							<td><%= link_to "Facebook","http://wwww.facebook.com/#{user.uid}",:target => "_blank" %></td>
							<td><%= user.admin %></td>
							<td><%= user.sign_in_count %></td>
							<td><%= distance_of_time_in_words(user.last_sign_in_at,Time.now) %>
							<td><%= distance_of_time_in_words(user.created_at,Time.now) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>