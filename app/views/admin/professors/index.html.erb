<%= render 'navbar/user' %>
<div class="container">
	<div class="row">
		<%= render 'menus/menu_admin'%>
		<div class="col-sm-9">
			<div class="container-box">
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th></th>
							<th>Professor</th>
							<th>Preço</th>
							<th><%= icon('thumbs-up') %></th>
							<th><%= icon('thumbs-down') %></th>
							<th>Matérias</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<% @professors.each do |professor| %>
						<tr>
							<td><%= professor.id %></td>
							<td><%= link_to (image_tag professor.image.url(:thumb)),professor%></td>
							<td><%= professor.name %></td>
							<td><%= professor.price %></td>
							<td><%= professor.recommended_count %></td>
							<td><%= professor.unrecommended_count %></td>
							<td><%= professor.courses.count %></td>
							<td><%= link_to 'Editar', edit_professor_path(professor) %></td>
							<td><%= link_to 'Deletar', professor_path(professor), method: :delete, data: { confirm: 'Tem certeza chapa ?' } %></td>
						</tr>
						<% end %>
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>